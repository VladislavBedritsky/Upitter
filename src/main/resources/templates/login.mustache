{{>parts/head}}



<h3  align="center">Login</h3>

{{#act}}
<div align="center" class="mt-3 text-success">
    {{act}}
</div>
{{/act}}

{{#actNo}}
<div align="center" class="mt-3 text-danger">
   {{actNo}}
</div>
{{/actNo}}

<form action="/login" method="post">
    <div class="col-sm-5 mt-4 mx-auto w-50 ">
        <input type="text" class="form-control" placeholder="Username"  name="username">
    </div>
    <div class="col-sm-5 mt-2 mx-auto w-50 ">
        <input type="password"  class="form-control" placeholder="Password" name="password">
    </div>
    <div class="mt-3" align="center">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit" class="btn btn-info px-4" >Sign in</button>
    </div>
</form>

