{{>parts/head}}


<h3 class="ml-2">
    Upload photo:
</h3>

{{#user}}
<form method="post" action="profile/{{id}}" enctype="multipart/form-data">
{{/user}}
    <div class="custom-file mt-2 w-25">
        <input type="file" name="userImage" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
        <label class="custom-file-label" for="inputGroupFile01">Browse photo</label>
    </div>
    <div class="mt-3 ml-2">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit" class="btn btn-info px-4">Upload</button>
    </div>
</form>

<h3 class="ml-2 mt-5">
    Change your email and password:
</h3>

<div class="mt-3 text-danger">
    {{#q2}}
     {{q2}}
    {{/q2}}

    {{#q1}}
    {{q1}}
    {{/q1}}
</div>

<form method="post">
    <div class=" mt-3 w-50 ">
        <input type="password"  class="form-control" placeholder="Password" name="password">
    </div>
    <div class=" mt-2 w-50 ">
        <input type="password"  class="form-control" placeholder="Password" name="password1">
    </div>
    <div class="mt-2 w-50 ">
        <input type="email"  class="form-control" placeholder="your@email.com" name="email">
    </div>
    <div class="mt-3 ml-2">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit" class="btn btn-info px-4" >Update</button>
    </div>
</form>


